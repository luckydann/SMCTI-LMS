<div class="custom-card-header">New Activity</div>
<div class="w-100 m-0 p-3">
    <form action="/add-activity/<%= uniqueCode %>" method="POST">
        <div class="form-group w-25">
            <label for="activityType">Activity Type</label>
            <select class="form-control" name="type" onchange="checkIfNeedDuration()" id="activityType">
                <option>Assignment</option>
                <option>Quiz</option>
                <option>Exam</option>
                <option>Lesson</option>
            </select>
        </div>
        <div id="examDurationDiv" style="display: none;" class="form-group w-25">
            <label for="examDuration">Exam Duration By Minutes</label> 
            <input type="number" class="form-control" id="examDuration" name="examDuration" placeholder="Exam Duration By Minutes">
        </div>
        <div class="row m-0 p-0 w-100 mt-3">
            <div class="form-group col-12 col-md-6 m-0 p-0 pr-3">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Activity Title">
            </div>
            <div class="form-group col-12 col-md-6 m-0 p-0 pr-3">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Activity Description">
            </div>
            <div class="form-group col-12 col-md-6 m-0 p-0 pr-3">
                <label for="start-date">Start Date</label>
                <input type="datetime-local" class="form-control" id="startDate" name="startDate">
            </div>
            <div class="form-group col-12 col-md-6 m-0 p-0 pr-3">
                <label for="end-date">End Date</label>
                <input type="datetime-local" class="form-control" id="endDate" name="endDate">
            </div>
            <div class="w-100 m-0 mt-5 p-0 center-items-vertical">
                <button type="submit" class="btn btn-success mt-2" style="width: 200px;">Save Activity</button>
                <button type="button" onclick="cancel()" class="btn btn-outline-secondary mt-2" style="width: 200px;">Cancel</button>
            </div>
        </div>
    </form>
    <script>
        function cancel(){
            const url = window.location.href;
            const splitUrl = url.split("/");
            var subjectUniqueCode = splitUrl[splitUrl.length - 2];
            window.location.href = '/dashboard/' + subjectUniqueCode + '/activities'
        }
        function checkIfNeedDuration(){
            var examDurationDiv = document.getElementById('examDurationDiv')
            var typeValue = document.getElementById('activityType')
            if(typeValue.value == 'Exam'){
                examDurationDiv.style.display = 'block'
            }else{
                examDurationDiv.style.display = 'none'
            }
        }
    </script>
</div>