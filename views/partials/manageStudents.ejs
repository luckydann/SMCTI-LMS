<div class="w-100 p-2">
    <div class="w-100 m-0 mb-5 mt-3 p-0 text-center">
        <h3>Manage Students</h3>
    </div>
    <div class="m-0 mb-2 p-0">
        <div class="container">
            <form method="POST" action="/add-student">
                <div class="row">
                    <div class="col-md-4 form-group">
                        <label for="accountId">Account ID:</label>
                        <input type="text" class="form-control" id="accountId" name="accountId">
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="fullName">Full Name:</label>
                        <input type="text" class="form-control" id="fullName" name="fullName">
                    </div>
                    <div class="col-md-4 form-group my-auto">
                        <button type="submit" class="btn btn-success btn-block">Add Student</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Account ID</th>
            <th scope="col">Full Name</th>
            <th scope="col">Password</th>
            <th scope="col">Unique QR ID</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < students.length; i++){%>
            <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= students[i].user.accountId %></td>
                <td><%= students[i].user.name %></td>
                <td><%= students[i].user.password %></td>
                <td>
                    <div class="table-qr">
                        <%= students[i].user.uniqueCode %>
                        <img src="/get-qrcode/<%= students[i].user.uniqueCode %>" alt="QR Code" srcset="" style="width: 100px;">
                    </div>
                </td>
            </tr>
          <% } %>
        </tbody>
    </table>
</div>